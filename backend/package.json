{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "dev": "node -r dotenv/config ./node_modules/.bin/nodemon --exec ./node_modules/.bin/ts-node src/index.ts",
    "dev2" : "npx dotenv-cli -e .env -- npx nodemon --exec npx ts-node src/index.ts",
    "seed": "node -r dotenv/config ./node_modules/.bin/ts-node src/scripts/seedDatabase.ts",
    "test": "jest",
    "test:mocked": "jest --testPathPattern=src/__tests__/mocked",
    "test:unmocked": "jest --testPathPattern=src/__tests__/unmocked",
    "test:coverage": "jest --coverage",
    "test:coverage:mocked": "jest --coverage --testPathPattern=src/__tests__/mocked",
    "test:coverage:unmocked": "jest --coverage --testPathPattern=src/__tests__/unmocked"
  },
  "dependencies": {
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "axios": "^1.7.9",
    "express": "^4.17.1",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.1.0",
    "mongoose": "^6.12.0",
    "morgan": "^1.10.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  }
}
